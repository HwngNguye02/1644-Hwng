                <th>Picture</th>
                <th>Description</th>
                <th>Color</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{@index}}</td>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td><img src="{{picture}}" width="300" height="350" /></td>
                <td>{{des}}</td>
